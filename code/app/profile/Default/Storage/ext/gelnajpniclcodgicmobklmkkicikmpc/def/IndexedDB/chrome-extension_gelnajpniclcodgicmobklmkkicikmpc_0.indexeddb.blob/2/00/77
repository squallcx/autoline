<div id="note_title_area" class="mdNote01Head _note_title_area" contenteditable="true" placeholder="Title">Get ready for LINE Memos.</div>    <div id="note_contents_area" class="mdNote01Desc _note_contents_area" contenteditable="true" placeholder="Create a new memo." style="height: 337px;"><div><div>加密前明文为: rootadmin</div><div>加密后密文为: HrfWjD6h3j+E0y6zYUoTUg==</div><div>------------------------------------</div><div>&nbsp;&lt;!--DES 加密--&gt;</div><div>&nbsp; &nbsp; &lt;add key="deskey" value="1qazXSW@CDE#$RFVBGT%^YHN"/&gt;</div><div>&nbsp; &nbsp; &lt;add key="desvector" value="qwertyui"/&gt;</div></div><div><div>&nbsp; &nbsp; &nbsp; &nbsp; public static string Crypt(string sourceStr)</div><div>&nbsp; &nbsp; &nbsp; &nbsp; {</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; string deskey = ConfigurationManager.AppSettings["deskey"];</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; string desvector = ConfigurationManager.AppSettings["desvector"];</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; byte[] keys = System.Text.ASCIIEncoding.ASCII.GetBytes(deskey);</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; byte[] vectors = System.Text.ASCIIEncoding.ASCII.GetBytes(desvector);</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; if (keys.Length == 24 &amp;&amp; vectors.Length == 8)</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; {</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; TripleDESCryptoServiceProvider tDESalg = new TripleDESCryptoServiceProvider();</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; MemoryStream ms = new MemoryStream();</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; CryptoStream cs = new CryptoStream(ms, tDESalg.CreateEncryptor(keys, vectors), CryptoStreamMode.Write);</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; StreamWriter sw = new StreamWriter(cs);</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; sw.Write(sourceStr);</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; sw.Flush();</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; cs.FlushFinalBlock();</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; ms.Flush();</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; sourceStr = Convert.ToBase64String(ms.GetBuffer(), 0, Convert.ToInt32(ms.Length));</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; }</div><div>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; return sourceStr;</div><div>&nbsp; &nbsp; &nbsp; &nbsp; }</div></div>    </div>